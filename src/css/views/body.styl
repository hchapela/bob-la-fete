*
    margin 0
    padding 0

body
    width 100vw
    height 100vh
    overflow hidden
    font-family: 'IBM Plex Mono', monospace

.hover-flash
    width 100vw
    height 100vh
    position absolute
    background #2319c3
    opacity 0.1

.links
    position absolute
    bottom 0
    right 0
    display flex
    z-index 99
    margin 0 15px 15px 0
    
    p.link-item
        color white
        margin auto 5px
        font-size 10px
        opacity 0.6

    a.link-item
        fill white
        cursor pointer
        margin 10px
        opacity 0.6
        transition ease 0.2s

    .link-item:hover
        opacity 1

.click
    position absolute
    height 100vh
    width 100vw
    display flex
    justify-content center
    align-items center
    transform translateY(200px)
    opacity 0.6
    transition ease 0.1s
    p
        color white
        cursor pointer